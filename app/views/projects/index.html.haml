=breadcrumb_tag do
  %li.active
    Проекты
  %li
    Администрирование

.page-header
  %h1= t('headers.projects.index')

%table.table.table-hover.table-striped
  %caption
    = link_to new_project_path, class: 'btn btn-success' do
      = fa_icon :plus
      = t('buttons.new.project')
  %thead
    %tr
      %th Название
      %th Дата начала
      %th Дата окончания
      %th Цена
      %th Сотрудники
      %th


  %tbody
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= project.start
        %td= project.end
        %td= project.price
        %td= project.worker_projects.map{ |wp| wp.worker.sn }.join(", ")
        %td.right
          = link_to edit_project_path(project), class: 'btn btn-info' do
            = fa_icon :edit
            = t('buttons.edit')
          = link_to project, :method => :delete, :data => { :confirm => t('buttons.confirm.project') }, class: 'btn btn-danger' do
            = fa_icon :times
            = t('buttons.destroy')
