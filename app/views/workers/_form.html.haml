= form_for @worker do |f|
  = error_messages_for @worker

  .form-actions.bottom20
    = f.submit nil, class: 'btn btn-primary'
    
  .row
    .col-md-6
      .form-group
        = f.label :sn
        = f.text_field :sn, class: 'form-control'
        = f.error_messages_for(:sn)
    .col-md-6
      .form-group
        = f.label :fn
        = f.text_field :fn, class: 'form-control'
        = f.error_messages_for(:fn)
    .col-md-6
      .form-group
        = f.label :ln
        = f.text_field :ln, class: 'form-control'
        = f.error_messages_for(:ln)
    .col-md-6
      .form-group
        = f.label :passport
        = f.text_field :passport, class: 'form-control'
        = f.error_messages_for(:passport)
    .col-md-6
      .form-group
        = f.label :inn
        = f.text_field :inn, class: 'form-control'
        = f.error_messages_for(:inn)
    .col-md-6
      .form-group
        = f.label :birthday
        .input-group.date.datepicker
          = f.text_field(:birthday, value: lnil(f.object.birthday),
          class: 'form-control')
          %span.input-group-addon
            %span.glyphicon.glyphicon-calendar
        = f.error_messages_for(:birthday)
    .col-md-6
      .form-group
        = f.label :position
        = f.text_field :position, class: 'form-control'
        = f.error_messages_for(:position)

    .col-md-12
      = f.fields_for :department do |d|
        .form-group
          %h3 Отдел:
          = d.label :name
          = d.text_field :name, class: 'form-control'
          = d.error_messages_for(:name)
          = d.label '_destroy', 'Удалить?'
          = d.check_box '_destroy'
          = d.error_messages_for(:_destroy)
